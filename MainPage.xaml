<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_29._09._23Badowski4c.MainPage">
    <Shell.TitleView>
        <Label 
            Text = "czcionki" 
            VerticalOptions="CenterAndExpand"
            TextColor="white"
            FontSize="20"/>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">

            <Label 
                Text="Właściwości czcionki"
                FontSize="35"
                TextColor="white"
                BackgroundColor="olive"
                Margin="20"
                WidthRequest="400"/>

            <Label 
                x:Name="tuRozmiar"
                Text="Rozmiar: "/>

            <Slider 
                x:Name="slider1"
                Minimum="0"
                    Maximum="50"
                    ValueChanged="zmienWielkosc" />

            <Label 
                x:Name="wynik"
                Text="Dzień dobry"
                FontSize="20"/>

            <Button 
                x:Name="przycisk"
                Text=">>"
                Clicked="zmien"
                BackgroundColor="olive"
                WidthRequest="100"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
